{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "types": ["node", "webdriverio", "mocha"],  // Include mocha types here
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ],
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "test/*"]
    }
  },
  "include": ["src/**/*", "test/**/*", "mocks"],
  "exclude": ["node_modules"]
}
